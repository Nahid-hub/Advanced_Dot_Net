
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
@if (Model != null)
{
    <h1>@Model.Name</h1>
}
<form action="" method="post">
    <label for="Id">ID: </label>
    <input type="text" name="Id" value="@(Model != null ? Model.Id : "")" class="form-control" />
    @Html.ValidationMessage("Id", new { @class = "text-danger" })<br>
    <label for="room number">Room Number: </label>
    <input type="text" name="Room_Number" value="@(Model != null ? Model.Room_Number: "")" class="form-control" />
    @Html.ValidationMessage("Room_Number", new { @class = "text-danger" })<br>
     <label for="room catagory">Room Catagory: </label>
    <input type="text" name="Room_Catagory" value="@(Model != null ? Model.Room_Catagory : "")" class="form-control" />
    @Html.ValidationMessage("Room_Catagory", new { @class = "text-danger" })<br>
    <label for="price">Price: </label>
    <input type="text" name="Price" value="@(Model != null ? Model.Price : "")" class="form-control" />
    @Html.ValidationMessage("Price", new { @class = "text-danger" })<br>
    <input type="Submit" class="btn btn-success" />
</form>
